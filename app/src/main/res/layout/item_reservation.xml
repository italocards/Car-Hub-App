<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Informações da Reserva -->
    <TextView
        android:id="@+id/vehicleNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Veículo: Golf GTI"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/pickupDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retirada: 01/12/2024"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/returnDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Devolução: 05/12/2024"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/totalPriceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preço Total: $356"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Pending"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="8dp" />

    <!-- Botões de Ação -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/completeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gerenciar"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar"
            android:backgroundTint="@color/colorAccent"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
